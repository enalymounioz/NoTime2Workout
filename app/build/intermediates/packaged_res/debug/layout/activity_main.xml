<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_screen_main_layout_padding"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="191dp"
        android:layout_height="110dp"
        android:layout_marginEnd="44dp"
        android:gravity="end"
        android:text="@string/no_time_nto_workout"
        android:textColor="@color/purple_700"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/myImageview"
        app:layout_constraintEnd_toEndOf="@+id/myImageview" />

    <ImageView
        android:id="@+id/myImageview"
        android:layout_width="424dp"
        android:layout_height="282dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/image"
        android:src="@drawable/workout_main_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
    android:id="@+id/frameLayout_Start"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginTop="25dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/myImageview"
    android:background="@drawable/item_color_accent_border_ripple_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_button_text_size"
        android:textStyle="bold"/>

</FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayoutBMI"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/item_circular_color_accent_background"
        app:layout_constraintBottom_toTopOf="@id/tvCalculator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/frameLayoutHistory"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout_Start"
        app:layout_constraintVertical_bias="0.92">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="BMI"
            android:textColor="@color/white"
            android:textSize="@dimen/default_button_text_size"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayoutHistory"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/item_circular_color_accent_background"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayoutBMI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayoutBMI"
        app:layout_constraintTop_toTopOf="@+id/frameLayoutBMI">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_calendar24" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/default_button_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/frameLayoutBMI"
        app:layout_constraintStart_toStartOf="@+id/frameLayoutBMI"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout_Start"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/tvHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/default_button_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/frameLayoutHistory"
        app:layout_constraintStart_toStartOf="@+id/frameLayoutHistory"
        app:layout_constraintTop_toTopOf="@+id/tvCalculator" />


</androidx.constraintlayout.widget.ConstraintLayout>